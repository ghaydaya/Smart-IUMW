<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ADD8E6"
    tools:context="com.example.howkum.iumwsms.SignUpRoleSelction">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Role"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:id="@+id/student_selector_btn"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program Leader"
        android:id="@+id/pl_role_selector_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/student_selector_btn"
        android:layout_marginTop="21dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dean"
        android:id="@+id/dean_selector_btn"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/pl_role_selector_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registry"
        android:id="@+id/registry_selector_btn"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/dean_selector_btn"
        android:layout_alignLeft="@+id/dean_selector_btn"
        android:layout_alignStart="@+id/dean_selector_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:layout_marginTop="21dp"
        android:id="@+id/button3"
        android:layout_below="@+id/registry_selector_btn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

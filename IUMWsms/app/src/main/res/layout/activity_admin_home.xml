<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.howkum.iumwsms.AdminHome"
    android:background="#ADD8E6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Admin Home"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What Do You Want ?"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:id="@+id/admin_add_btn"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/admin_remove_btn"
        android:layout_alignStart="@+id/admin_remove_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Student"
        android:id="@+id/admin_remove_btn"
        android:layout_below="@+id/admin_add_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Semester"
        android:id="@+id/admin_semester_btn"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/admin_remove_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Student Details"
        android:id="@+id/admin_s_details"
        android:layout_below="@+id/admin_semester_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/notifi_pending_student"
        android:layout_alignTop="@+id/admin_add_btn"
        android:layout_toRightOf="@+id/admin_add_btn"
        android:layout_toEndOf="@+id/admin_add_btn" />
</RelativeLayout>
